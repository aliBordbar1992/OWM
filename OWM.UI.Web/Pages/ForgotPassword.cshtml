@page "/Password/Forget"
@model OWM.UI.Web.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forget password";
    Layout = "Shared/_Layout";
}

<div class="container pt-lg-5">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="box text-center">
                <h3><i class="fa fa-lock fa-4x"></i></h3>
                <h2 class="text-center">Forgot Password?</h2>
                <p class="small">We send a reset password link to your email.</p>
                <div asp-validation-summary="All" id="ValidationSummary"></div>
                <form method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <span class="fa fa-envelope"></span>
                            </span>
                        </div>
                        <input type="email" required class="form-control" placeholder="Email Address" asp-for="@Model.Input.Email">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">Send password</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>