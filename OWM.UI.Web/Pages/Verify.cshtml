@page

@model OWM.UI.Web.Pages.VerificationModel
@{
    ViewData["Title"] = "Verify email";
    Layout = "Shared/_Layout";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
}

@{
    if (Model.DirectVisit)
    {
        <div class="container">
            <div class="alert alert-success d-block">@Model.Message</div>
            @if (Model.EmailAlreadyConfirmed)
            {
                <div class="w-50 m-auto text-center mt-2">
                    <a href="@Url.Page("./User/EditProfile")" class="btn-lg btn-success">View profile</a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="container">
            <div class="alert alert-success d-block">@Model.Message</div>
            <div class="w-50 m-auto text-center mt-2">

                @if (Model.EmailAlreadyConfirmed)
                {
                    <a class="btn-lg btn-success" href="@Url.Page("./User/EditProfile")">View profile</a>
                }
                else if (!Model.UserNotFound)
                {
                    <form class="box w-50" method="post">
                        <input type="submit" class="btn-lg btn-success" id="send" value="Send verification email again" />
                    </form>
                }
            </div>
        </div>
    }
}